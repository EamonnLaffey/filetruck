  "version": "0.2.0",
  "configurations": [
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug unit tests in library 'filetruck'",
      "cargo": {
        "args": ["test", "--no-run", "--lib", "--package=filetruck"],
        "filter": {
          "name": "filetruck",
          "kind": "lib"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug pickup",
      "cargo": {
        "args": ["build", "--bin=main", "--package=filetruck"],
        "filter": {
          "name": "main",
          "kind": "bin"
        }
      },
      "args": ["--plan", "test.yml", "pickup", "--from", "input"],
      "cwd": "${workspaceFolder}/test_data"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug pickup",
      "cargo": {
        "args": ["build", "--bin=main", "--package=filetruck"],
        "filter": {
          "name": "main",
          "kind": "bin"
        }
      },
      "args": ["--plan", "test.yml", "dropoff", "--to", "output"],
      "cwd": "${workspaceFolder}/test_data"
    }
  ]
}
